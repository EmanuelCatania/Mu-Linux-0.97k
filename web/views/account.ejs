<%- include('partials/site_head', { pageTitle, page }) %>

<main class="flex-grow-1">
  <div class="container my-5">
    <div class="row justify-content-center">
      <div class="col-12 col-lg-6">
        <div class="bg-white border p-4 shadow-sm rounded-3">
          <h3 class="fw-bold mb-3 text-center">Mi cuenta</h3>
          <table class="table table-bordered mb-0">
            <tbody>
              <tr>
                <th>Usuario</th>
                <td><%= account?.memb___id %></td>
              </tr>
              <tr>
                <th>Nombre</th>
                <td><%= account?.memb_name %></td>
              </tr>
              <tr>
                <th>Email</th>
                <td><%= account?.mail_addr || '-' %></td>
              </tr>
              <tr>
                <th>Nivel cuenta</th>
                <td><%= account?.AccountLevel %></td>
              </tr>
            </tbody>
          </table>
          <div class="d-grid mt-3">
            <a class="btn btn-outline-secondary" href="/logout">Salir</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>

<%- include('partials/site_footer') %>
