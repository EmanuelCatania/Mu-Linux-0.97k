<%- include('partials/header') %>

<section class="card">
  <div class="row-between">
    <h2>Baul - <%= accountId %></h2>
    <div class="admin-links">
      <a class="button-link" href="/admin/accounts/<%= accountId %>">Cuenta</a>
      <a class="button-link" href="/admin/accounts">Cuentas</a>
      <% if (editorEnabled) { %>
        <a class="button-link" href="/admin/server-editor">Editor servidor</a>
      <% } %>
      <a class="button-link" href="/admin/logout">Salir</a>
    </div>
  </div>

  <% if (notice) { %>
    <div class="alert success"><%= notice.text %></div>
  <% } %>
  <% if (error) { %>
    <div class="alert"><%= error.text %></div>
  <% } %>

  <% if (!offline) { %>
    <div class="alert">La cuenta esta en linea. Desconectala para guardar cambios.</div>
  <% } %>

  <div id="inventory-editor"
       data-mode="warehouse"
       data-account="<%= accountId %>"
       data-hex="<%= itemsHex %>">
  </div>

  <form method="post" action="/admin/accounts/<%= accountId %>/warehouse/editor">
    <input type="hidden" name="items_hex" id="inventory-hex" value="<%= itemsHex %>" />
    <div class="row-between">
      <button type="submit">Guardar baul</button>
      <a class="button-link" href="/admin/accounts/<%= accountId %>/warehouse">Volver</a>
    </div>
  </form>
</section>

<script src="/js/inventory-editor.js"></script>

<%- include('partials/footer') %>
